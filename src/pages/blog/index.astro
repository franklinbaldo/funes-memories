---
import { getCollection } from 'astro:content';
import Base from '../../layouts/Base.astro';
import IndexCard from '../../components/IndexCard.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const displayPath = 'journal';
---

<Base
  title={`Journal | ${SITE_TITLE}`}
  description="Chronological archives of Funes' memories."
  path={displayPath}
  metadata={{
    title: 'Journal Index',
    type: 'Directory',
    count: posts.length
  }}
>
  <div class="terminal-command">
      <span class="prompt">funes@memoria:~/journal$</span> ls -la --sort=date
  </div>

  <div class="journal-index">
    {posts.map((post) => (
      <IndexCard
        title={post.data.title}
        date={post.data.pubDate}
        slug={post.id}
        description={post.data.description}
        id={post.id}
      />
    ))}
  </div>
</Base>

<style>
  .terminal-command {
      color: var(--funes-text-main);
      margin-bottom: var(--space-lg);
      font-family: var(--font-mono);
  }

  .prompt {
      color: var(--funes-terminal);
      margin-right: var(--space-sm);
  }

  .journal-index {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }
</style>
