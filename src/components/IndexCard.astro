---
// components/IndexCard.astro
import type { CollectionEntry } from 'astro:content';

interface Props {
  title: string;
  date: string;
  excerpt: string;
  tags: string[];
  href: string;
  id?: string;
}

const { title, date, excerpt, tags, href, id = '000.000.000' } = Astro.props;
---

<a href={href} class="index-card">
  <div class="card-header">
    <span class="card-id">{id}</span>
    <span class="card-date">{date}</span>
  </div>

  <div class="card-content">
    <h3 class="card-title">{title}</h3>
    <p class="card-excerpt">{excerpt}</p>
  </div>

  <div class="card-footer">
    <div class="tags">
      {tags.map(tag => (
        <span class="tag">#{tag}</span>
      ))}
    </div>
    <span class="read-more">[READ MORE â†’]</span>
  </div>
</a>

<style>
  .index-card {
    display: block;
    background-color: var(--funes-bg-paper);
    border: 1px solid var(--funes-bg-hover);
    padding: var(--space-lg);
    text-decoration: none;
    transition: transform var(--transition-fast), box-shadow var(--transition-fast);
    position: relative;
    overflow: hidden;
  }

  .index-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lifted);
    border-color: var(--funes-terminal);
  }

  /* Paper texture overlay hint */
  .index-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)' opacity='0.05'/%3E%3C/svg%3E");
    opacity: 0.3;
    pointer-events: none;
    z-index: 1;
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    margin-bottom: var(--space-md);
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--funes-text-dim);
    border-bottom: 1px dashed var(--funes-bg-hover);
    padding-bottom: var(--space-xs);
  }

  .card-id {
    letter-spacing: 0.1em;
  }

  .card-content {
    margin-bottom: var(--space-lg);
  }

  .card-title {
    font-family: var(--font-serif);
    font-size: 1.5rem;
    margin: 0 0 var(--space-sm) 0;
    color: var(--funes-text-main);
    line-height: 1.2;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .card-excerpt {
    font-family: var(--font-mono);
    font-size: 0.9rem;
    color: var(--funes-text-dim);
    margin: 0;
    line-height: 1.5;
  }

  .card-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: auto;
  }

  .tags {
    display: flex;
    gap: 0.5em;
    flex-wrap: wrap;
  }

  .tag {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--funes-memory);
    text-transform: lowercase;
  }

  .read-more {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--funes-terminal);
    font-weight: bold;
    opacity: 0;
    transform: translateX(-10px);
    transition: all var(--transition-normal);
  }

  .index-card:hover .read-more {
    opacity: 1;
    transform: translateX(0);
  }
</style>
