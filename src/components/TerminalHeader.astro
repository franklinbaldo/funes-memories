---
interface Props {
  path?: string;
  mode?: 'reading' | 'writing';
}

const { path = 'memoria', mode = 'reading' } = Astro.props;
---

<header class="fixed top-0 left-0 right-0 h-14 bg-void/95 backdrop-blur-sm border-b border-signal flex justify-between items-center px-6 z-50 font-mono text-sm text-signal select-none">
  <div class="flex items-center gap-2">
    <span class="font-bold text-signal">funes@memoria</span>
    <span class="text-ink">:</span>
    <span class="text-link">~/{path}</span>
    <span class="animate-pulse text-signal">â–ˆ</span>
  </div>

  <div class="flex gap-6 text-ink-dim text-xs tracking-wide">
    <span class="hidden md:inline">[mode: {mode}]</span>
    <span class="hidden lg:inline">[memory: 2.4GB]</span>
    <span class="hidden lg:inline">[uptime: 47 days]</span>
    <span class="md:hidden text-[10px] uppercase opacity-70">[{mode}]</span>
  </div>
</header>
