---
import BaseHead from '../components/BaseHead.astro';
import FileTree from '../components/FileTree.astro';
import MetadataSidebar from '../components/MetadataSidebar.astro';
import TerminalHeader from '../components/TerminalHeader.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

interface Props {
  title?: string;
  description?: string;
  image?: any;
  path?: string;
  mode?: 'reading' | 'writing';
  metadata?: any;
  headings?: any[];
  relatedPosts?: any[];
  hideRightSidebar?: boolean;
}

const {
  title = SITE_TITLE,
  description = SITE_DESCRIPTION,
  image,
  path,
  mode,
  metadata,
  headings = [],
  relatedPosts = [],
  hideRightSidebar = false
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} image={image} />
  </head>
  <body>
    <TerminalHeader path={path} mode={mode} />

    <div class="layout-grid">
      <aside class="sidebar-left">
        <FileTree />
      </aside>

      <main class="content">
        <slot />
      </main>

      {!hideRightSidebar && (
        <aside class="sidebar-right">
          <slot name="metadata">
            <MetadataSidebar metadata={metadata} headings={headings} relatedPosts={relatedPosts} />
          </slot>
        </aside>
      )}
    </div>
  </body>
</html>

<style>
  .layout-grid {
    display: grid;
    grid-template-columns: var(--nav-width) 1fr var(--meta-width);
    gap: var(--space-lg);
    max-width: 1600px; /* Cap width for ultra-wide screens */
    margin: 0 auto;
    padding-top: calc(var(--header-height) + var(--space-lg));
    padding-left: var(--space-md);
    padding-right: var(--space-md);
    min-height: 100vh;
  }

  .sidebar-left {
    position: sticky;
    top: calc(var(--header-height) + var(--space-lg));
    height: calc(100vh - var(--header-height) - var(--space-2xl));
    overflow-y: auto;
  }

  .sidebar-right {
    position: sticky;
    top: calc(var(--header-height) + var(--space-lg));
    height: calc(100vh - var(--header-height) - var(--space-2xl));
    overflow-y: auto;
  }

  .content {
    min-width: 0; /* Prevent flex/grid overflow */
  }

  /* Responsive Design */
  @media (max-width: 1200px) {
    .layout-grid {
      grid-template-columns: var(--nav-width) 1fr;
    }

    .sidebar-right {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .layout-grid {
      grid-template-columns: 1fr;
      padding-left: var(--space-sm);
      padding-right: var(--space-sm);
    }

    .sidebar-left {
      display: none; /* In a real implementation, this would be a slide-over drawer */
    }
  }
</style>
