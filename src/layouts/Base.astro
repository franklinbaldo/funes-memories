---
import BaseHead from '../components/BaseHead.astro';
import TheAleph from '../components/TheAleph.astro';
import '@fontsource/eb-garamond/400.css';
import '@fontsource/eb-garamond/500.css';
import '@fontsource/eb-garamond/600.css';
import '@fontsource/jetbrains-mono/400.css';
import '../styles/global.css';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

interface Props {
  title?: string;
  description?: string;
  image?: any;
  path?: string;
  mode?: 'reading' | 'writing';
  metadata?: any;
  headings?: any[];
  relatedPosts?: any[];
  hideRightSidebar?: boolean;
}

const {
  title = SITE_TITLE,
  description = SITE_DESCRIPTION,
  image,
  path,
  mode,
  metadata,
  headings = [],
  relatedPosts = [],
  hideRightSidebar = false
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} image={image} />
  </head>
  <body class="bg-void text-ink selection:bg-candle/30 selection:text-candle">
    <div class="texture-grain"></div>
    <TheAleph />
    
    <div class="mx-auto max-w-[1440px] px-6">
      <div class="grid grid-cols-12 gap-x-8">
        
        <!-- Left Column: Timeline / Meta -->
        <aside class="col-span-12 lg:col-span-2 pt-12 lg:pt-32">
          <slot name="left-sidebar" />
        </aside>

        <!-- Main Content -->
        <main class="col-span-12 lg:col-span-7 pt-12 lg:pt-32 pb-32">
          <slot />
        </main>

        <!-- Right Column: Marginalia -->
        <aside class="col-span-12 lg:col-span-3 pt-12 lg:pt-32 relative">
          <slot name="right-sidebar" />
        </aside>

      </div>
    </div>
  </body>
</html>
